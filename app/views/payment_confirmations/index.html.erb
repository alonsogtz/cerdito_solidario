<div class="page-header">
  <h1>
    Payment confirmations
    <a href="/payment_confirmations/new" class="btn btn-lg btn-success">New Payment confirmation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Group</th>
        <th>Date posted</th>
        <th>Image</th>
        <th>Payment method</th>
        <th>Actions</th>
      </tr>

      <% @payment_confirmations.each do |payment_confirmation| %>
      <tr>
        <td>
          <% if payment_confirmation.group.present? %>
            <a href="/groups/<%= payment_confirmation.group.id %>">
              <%= payment_confirmation.group.name %>
            </a>
          <% end %>
        </td>
        <td><%= payment_confirmation.date_posted %></td>
        <td><img src='<%= payment_confirmation.image %>' class='img-responsive'></td>
        <td>
          <% if payment_confirmation.payment_method.present? %>
            <a href="/payment_methods/<%= payment_confirmation.payment_method.id %>">
              <%= payment_confirmation.payment_method.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/payment_confirmations/<%= payment_confirmation.id %>" class="btn btn-primary">Show</a>
          <a href="/payment_confirmations/<%= payment_confirmation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_payment_confirmation/<%= payment_confirmation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @payment_confirmations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
