<div class="page-header">
  <h1>
    Additional infos
    <a href="/additional_infos/new" class="btn btn-lg btn-success">New Additional info</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Image</th>
        <th>User</th>
        <th>Title</th>
        <th>Actions</th>
      </tr>

      <% @additional_infos.each do |additional_info| %>
      <tr>
        <td><%= additional_info.description %></td>
        <td><img src='<%= additional_info.image %>' class='img-responsive'></td>
        <td>
          <% if additional_info.user.present? %>
            <a href="/users/<%= additional_info.user.id %>">
              <%= additional_info.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= additional_info.title %></td>
        <td>
          <a href="/additional_infos/<%= additional_info.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == additional_info.user %>
            <a href="/additional_infos/<%= additional_info.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_additional_info/<%= additional_info.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @additional_infos, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
