<div class="page-header">
  <h3>Group Comment #<%= @group_comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @group_comment.user.present? %>
          <a href="/users/<%= @group_comment.user_id %>">
            <%= @group_comment.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Group</dt>
      <dd>
        <% if @group_comment.group.present? %>
          <a href="/groups/<%= @group_comment.group_id %>">
            <%= @group_comment.group.name %>
          </a>
        <% end %>
      </dd>

      <dt>Body</dt>
      <dd><%= @group_comment.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/group_comments" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @group_comment.user %>
        <a href="/group_comments/<%= @group_comment.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_group_comment/<%= @group_comment.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
