<div class="page-header">
  <h1>
    Group comments
    <a href="/group_comments/new" class="btn btn-lg btn-success">New Group comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Group</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @group_comments.each do |group_comment| %>
      <tr>
        <td><%= group_comment.user.email %></td>
        <td><%= group_comment.group_id %></td>
        <td><%= group_comment.body %></td>
        <td>
          <a href="/group_comments/<%= group_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/group_comments/<%= group_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_group_comment/<%= group_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
