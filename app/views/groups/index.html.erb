            <div class='col-md-6'>
              <div class='input-group date' id='preferredp_mt_methodlteqcreated_atPicker'>
                  <%= f.text_field :preferredp_mt_method_created_at_lteq, :class => "form-control", :placeholder => "PaymentMethod Created at less than or equal to" %>
                  <span class="input-group-addon">
