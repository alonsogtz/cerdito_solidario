              <div class='input-group date' id='preferredp_mt_methodgteqcreated_atPicker'>
                  <%= f.text_field :preferredp_mt_method_created_at_gteq, :class => "form-control", :placeholder => "PaymentMethod Created at greater than or equal to" %>
