              });
              $('#begining_dategteqPicker').on("dp.change", function (e) {
                  $('#begining_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#begining_datelteqPicker').on("dp.change", function (e) {
                  $('#begining_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :comments_cont, "Comments contains" %>
    <%= f.text_field :comments_cont, :class => "form-control", :placeholder => "Comments contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
