<div class="form-group">
      <%= f.label :area_name_cont, "Community name contains" %>
      <%= f.text_field :area_name_cont, :class => "form-control", :placeholder => "Community name contains" %>
    </div>

<div class="form-group">
      <%= f.label :creditors_email_cont, "User email contains" %>
      <%= f.text_field :creditors_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :commenters_email_cont, "User email contains" %>
      <%= f.text_field :commenters_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :group_leaders_email_cont, "User email contains" %>
      <%= f.text_field :group_leaders_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/groups" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#groups_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Community</th>
        <th>Preferredp mt method</th>
        <th>Comments</th>
        <th>Begining date</th>
        <th>End date</th>
        <th>Weekly pmt</th>
        <th>Total principal</th>
        <th>Actions</th>
      </tr>

      <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td>
          <% if group.area.present? %>
            <a href="/communities/<%= group.area.id %>">
              <%= group.area.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if group.preferredp_mt_method.present? %>
            <a href="/payment_methods/<%= group.preferredp_mt_method.id %>">
              <%= group.preferredp_mt_method.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= group.comments %></td>
        <td><%= group.begining_date %></td>
        <td><%= group.end_date %></td>
        <td><%= group.weekly_pmt %></td>
        <td><%= group.total_principal %></td>
        <td>
          <a href="/groups/<%= group.id %>" class="btn btn-primary">Show</a>
          <a href="/groups/<%= group.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_group/<%= group.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @groups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
