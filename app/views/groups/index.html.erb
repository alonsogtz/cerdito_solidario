<div class="page-header">
  <h1>
    Groups
    <a href="/groups/new" class="btn btn-lg btn-success">New Group</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "groups_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :total_principal_cont, "Total principal contains" %>
    <%= f.text_field :total_principal_cont, :class => "form-control", :placeholder => "Total principal contains" %>
  </div>

<div class="form-group">
    <%= f.label :weekly_pmt_cont, "Weekly pmt contains" %>
    <%= f.text_field :weekly_pmt_cont, :class => "form-control", :placeholder => "Weekly pmt contains" %>
  </div>

<div class="form-group">
          <%= f.label :end_date, "End date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='end_dategteqPicker'>
                  <%= f.text_field :end_date_gteq, :class => "form-control", :placeholder => "End date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='end_datelteqPicker'>
                  <%= f.text_field :end_date_lteq, :class => "form-control", :placeholder => "End date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#end_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#end_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#end_dategteqPicker').on("dp.change", function (e) {
                  $('#end_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#end_datelteqPicker').on("dp.change", function (e) {
                  $('#end_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :begining_date, "Begining date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
