<div class="page-header">
  <h1>
    Payment methods
    <a href="/payment_methods/new" class="btn btn-lg btn-success">New Payment method</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Account number</th>
        <th>Bank</th>
        <th>Actions</th>
      </tr>

      <% @payment_methods.each do |payment_method| %>
      <tr>
        <td><%= payment_method.account_number %></td>
        <td><%= payment_method.bank.name %></td>
        <td>
          <a href="/payment_methods/<%= payment_method.id %>" class="btn btn-primary">Show</a>
          <a href="/payment_methods/<%= payment_method.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_payment_method/<%= payment_method.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @payment_methods, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
