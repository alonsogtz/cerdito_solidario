<!-- Validation failure messages -->
<% if @personal_message.errors.any? %>
  <% @personal_message.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Personal Message</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_personal_message" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for sender_id -->
      <input type="hidden" name="sender_id" value="<%= current_user.id %>">

      <!-- Label and input for receiver_id -->
      <input type="hidden" name="receiver_id" value="<%= current_user.id %>">

      <!-- Label and input for message -->
      <div class="form-group">
        <label for="message" class="control-label">
          Message
        </label>

        <input type="text" id="message" name="message" placeholder="Message" class="form-control" value="<%= @personal_message.message %>">
      </div>

      <button class="btn btn-success">
        Create Personal Message
      </button>
      or
      <a href="/personal_messages">Cancel</a>
    </form>
  </div>
</div>
