<!-- Validation failure messages -->
<% if @personal_message.errors.any? %>
  <% @personal_message.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Personal Message #<%= @personal_message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_personal_message/<%= @personal_message.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      
      

      <!-- Label and input for receiver_id -->
      <div class="form-group">
        <label for="receiver_id" class="control-label">
          Receiver
        </label>

        <%= select_tag(:receiver_id, options_from_collection_for_select(User.all, :id, :email, @personal_message.receiver_id), :class => "form-control") %>
      </div>

      <!-- Label and input for message -->
      <div class="form-group">
        <label for="message" class="control-label">
          Message
        </label>

        <input type="text" id="message" name="message" placeholder="Message" class="form-control" value="<%= @personal_message.message %>">
      </div>

      <button class="btn btn-warning">
        Update Personal Message
      </button>
      or
      <a href="/personal_messages/<%= @personal_message.id %>">Cancel</a>
    </form>
  </div>
</div>
