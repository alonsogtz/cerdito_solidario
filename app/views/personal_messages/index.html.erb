<div class="page-header">
  <h1>
    Personal messages
    <a href="/personal_messages/new" class="btn btn-lg btn-success">New Personal message</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Receiver</th>
        <th>Message</th>
        <th>Actions</th>
      </tr>

      <% @personal_messages.each do |personal_message| %>
      <tr>
        <td><%= personal_message.sender.email %></td>
        <td><%= personal_message.receiver.email %></td>
        <td><%= personal_message.message %></td>
        <td>
          <a href="/personal_messages/<%= personal_message.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == personal_message.sender %>
            <a href="/personal_messages/<%= personal_message.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_personal_message/<%= personal_message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
