<div class="page-header">
  <h1>
    Banks
    <a href="/banks/new" class="btn btn-lg btn-success">New Bank</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td>
          <a href="/banks/<%= bank.id %>" class="btn btn-primary">Show</a>
          <a href="/banks/<%= bank.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bank/<%= bank.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
