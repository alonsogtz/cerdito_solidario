<div class="page-header">
  <h1>
    Disbursement options
    <a href="/disbursement_options/new" class="btn btn-lg btn-success">New Disbursement option</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Bank</th>
        <th>Account number</th>
        <th>Beneficiary</th>
        <th>Actions</th>
      </tr>

      <% @disbursement_options.each do |disbursement_option| %>
      <tr>
        <td><%= disbursement_option.bank.name %></td>
        <td><%= disbursement_option.account_number %></td>
        <td><%= disbursement_option.beneficiary.email %></td>
        <td>
          <a href="/disbursement_options/<%= disbursement_option.id %>" class="btn btn-primary">Show</a>
          <a href="/disbursement_options/<%= disbursement_option.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_disbursement_option/<%= disbursement_option.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
